{
  "include": ["electron.vite.config.*", "src/main/**/*", "src/preload/**/*", "src/renderer/src/**/*", ".eslintrc.cjs"],
  "compilerOptions": {
    // 语言和环境
    "target": "esnext",
    "jsx": "preserve",
    // 项目
    "composite": true,
    // 模块
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["electron-vite/node", "node"],
    // 互操作约束
    "isolatedModules": true,
    "esModuleInterop": true,
    // 类型检查
    // "strict": true,
    // "noImplicitAny": false,
    // "noImplicitReturns": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "skipLibCheck": true,
  }
}
